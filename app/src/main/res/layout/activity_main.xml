<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="14">

    <TextView
        android:id="@+id/titleTextGPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="GPS LOCATION"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/locationControllerGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="@string/resume"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <TextView
            android:id="@+id/GpsLongitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="longitude"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/GpsLongitudeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <TextView
            android:id="@+id/GpsLatitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="latitude"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/GpsLatitudeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0000"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/titleTextNETWORK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="NETWORK LOCATION"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/locationControllerNETWORK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="@string/resume"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <TextView
            android:id="@+id/NetLongitutde"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="longitude"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/NetLongitudeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/NetLatitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="latitude"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/NetLatitudeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0000"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/titleTextBEST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="BEST LOCATION"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/locationControllerBEST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="@string/resume"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <TextView
            android:id="@+id/BestLongitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="longitude"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/BestLongitudeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/BestLatitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="latitude"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/BestLatitudeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0000"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>



</LinearLayout>